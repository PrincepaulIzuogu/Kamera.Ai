{
  "name": "Docker Compose Dev Container",
  "image": "mcr.microsoft.com/vscode/devcontainers/python:0-3.8",
  "settings": {
    "terminal.integrated.shell.linux": "/bin/bash"
  },
  "extensions": [
    "ms-python.python",
    "ms-azuretools.vscode-docker"
  ],
  "forwardPorts": [3000, 5001],
  "mounts": [
    "source=/path/to/project,target=/app,type=bind",
    "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"
  ],
  "postCreateCommand": "apt-get update && apt-get install -y bash curl jq docker.io docker-compose && docker-compose up --build",
  "remoteUser": "root"
}
